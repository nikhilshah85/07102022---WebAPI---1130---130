



<script>
    function getPostById()
    {
        var id=$("#txtPostId").val();
        url = "https://jsonplaceholder.typicode.com/posts/" + id;

        fetch(url).then(res=>res.json())
                   .then(data => {
                       console.log(data);

                       $("#txtUserId").text(data.userId);
                       $("#txtId").text(data.id);
                       $("#txtTitle").text(data.title);
                       $("#txtBody").text(data.body);


                   }).catch(err => { console.log(err) })
    }
</script>


<input type="number" placeholder="Enter Post Id" class="form-control" id="txtPostId"/>
<button class="btn btn-warning" onClick="getPostById()"> Get Post</button>


<div style="background-color:orange">
    <h2 id="txtUserId"> </h2>
    <h2 id="txtId"> </h2>
    <h2 id="txtTitle"> </h2>
    <h2 id="txtBody"> </h2>
</div>